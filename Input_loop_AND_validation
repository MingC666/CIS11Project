; Final Project
; Programmers: Brian Garcia, Ming Chen, Rigo Salzar, Scott Slessor
; Purpose: GET 5 SCORE FROM INPUT

.ORIG X3000

AND R1, R1, #0
ADD R1, R1, X5
NOT R1, R1
ADD R1, R1, X1

;;;;;;;;;;;;;;;;;;	LOOP for get 5 scores;;;;;;
;;;;;;;;;;;;;;;;;;
LOOP		
AND R0, R0, #0
LEA R0, PROMPT		;Prompt user to get input
PUTS

;;;;;;;;;;;;;;;;;;;;GET 1st INPUT AND VALIDATION
GETC			
PUTC
ADD R4, R0, #0		; CONVERT DEC TO HEX
ADD R4, R4, #-16
ADD R4, R4, #-16
ADD R4, R4, #-16
AND R2, R2, #0		; R2=-1
ADD R2, R2, #1
NOT R2, R2
ADD R2, R2, #1		; R2 =-1
ADD R4, R4, R2		; if x>1 or x<0 GO LOOP
BRp LOOP
BRz SCORE100		;if x=1, score can only be 100
ST R4, NUMBER1

;;;;;;;;;;;;;;;;;;;;;GET 2nd INPUT AND VALIDATION			
GETC			
PUTC
ST R4, NUMBER1

;;;;;;;;;;;;;;;;;;;;;;GET 3rd INPUT AND VALIDATION
GETC			
PUTC
ST R0, NUMBER3

ADD R1, R1, X1		;R1 is counter
BRn LOOP		;LOOP 5 TIME TO GET 5 SCORES

;;;;;;;;;;;;;;;;;;
;;;;;;;;;;;;;;;;;;	;END OF GET 5 SCORES
HALT

;;;;;;;;;		Branch for SCORE100
;;;;;;;;;		
SCORE100			;Branch of score = 100
GETC			
PUTC
ADD R4, R0, #0		; CONVERT DEC TO HEX
ADD R4, R4, #-16
ADD R4, R4, #-16
ADD R4, R4, #-16
BRnp LOOP		; input can only be 0 when score=1??

GETC			
PUTC
ADD R4, R0, #0		; CONVERT DEC TO HEX
ADD R4, R4, #-16
ADD R4, R4, #-16
ADD R4, R4, #-16
BRnp LOOP		; input can only be 0 when score=1??


ADD R1, R1, X1		;r1 is counter
BRn LOOP		;LOOP 5 TIME TO GET 5 SCORES
;;;;;;;;;		
;;;;;;;;;		Branch of end SCORE100

NUMBER1 .FILL X3100
NUMBER2 .FILL X3101
NUMBER3 .FILL X3102
PROMPT .STRINGZ "\nPLEASE ENTER THE SCORE BETWEEN 000-100: "
ENDD .STRINGZ "\nEND"

.END
